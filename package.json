{
  "name": "mern-ecommerce",
  "version": "1.0.0",
  "description": "An eCommerce app built with the MERN stack.",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
